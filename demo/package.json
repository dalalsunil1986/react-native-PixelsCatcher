{
  "name": "testApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "snapshots:apk": "cd android && ./gradlew assembleDebug -DentryFile=\"indexSnapshot.js\" -DbundleInDebug=true",
    "ui-snapshots:dev": "./node_modules/.bin/pixels-catcher android dev",
    "ui-snapshots:debug": "./node_modules/.bin/pixels-catcher android debug",
    "ui-snapshots:release": "./node_modules/.bin/pixels-catcher android release",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest"
  },
  "dependencies": {
    "react": "16.6.3",
    "react-native": "0.57.8"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-jest": "23.6.0",
    "eslint": "^5.11.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-flowtype": "^3.2.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.78.0",
    "jest": "23.6.0",
    "pixels-catcher": "0.2.0",
    "metro-react-native-babel-preset": "0.51.0",
    "react-test-renderer": "16.6.3"
  },
  "jest": {
    "preset": "react-native"
  },
  "PixelsCatcher": {
    "android": {
      "activityName": "MainActivity",
      "deviceName": "Nexus_5X",
      "packageName": "com.rumax.pixelscatcher.testapp",
      "snapshotsPath": "./snapshots/android",
      "dev": {
        "deviceParams": [
          "-no-audio",
          "-no-snapshot"
        ]
      },
      "debug": {
        "deviceParams": [
          "-no-audio",
          "-no-snapshot"
        ],
        "appFile": "./android/app/build/outputs/apk/debug/app-debug.apk"
      },
      "release": {
        "deviceParams": [
          "-no-audio",
          "-no-snapshot",
          "-no-window"
        ],
        "appFile": "./android/app/build/outputs/apk/release/app-release.apk"
      }
    },
    "ios": {
      "deviceName": "iPhone 8 Plus",
      "packageName": "org.reactjs.native.example.testApp",
      "snapshotsPath": "./snapshots/ios",
      "dev": {},
      "debug": {
        "appFile": "./ios/build/Build/Products/Debug-iphonesimulator/testApp.app"
      }
    }
  }
}
